{
  "compilerOptions": {
    "strict": true,
    "sourceMap": false,
    "types": ["node", "mocha"],
    "lib": ["es2015"],
    "target": "es2016",
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "packages",
    "paths": {
      "typechain": ["core/lib/index.ts"]
    },
  },
  "include": [
    "./packages/**/*.ts",
    "./typings/*.ts",
    "./node_modules/web3-typescript-typings/index.d.ts"
  ],
  "exclude": [
    "./test/integration/targets/truffle/**/*.ts",
    "./test/integration/targets/web3-1.0.0/**/*",
    "./test/package-test/**/*"
  ]
}
