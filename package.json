{
  "name": "monorepo-base",
  "private": true,
  "license": "MIT",
  "engines": {
    "yarn": ">=1.15.2"
  },
  "scripts": {
    "postinstall": "yarn build",
    "format": "wsrun -c format",
    "format:fix": "wsrun -c format:fix",
    "lint": "wsrun -c lint",
    "lint:fix": "wsrun -c lint:fix",
    "typecheck": "wsrun -c typecheck",
    "build": "tsc --build --verbose && wsrun -c post-build",
    "watch": "tsc --build --verbose --watch",
    "clean": "wsrun -c clean",
    "test": "./scripts/compile-contracts.sh && wsrun -c test",
    "test:fix": "yarn lint:fix && yarn test && yarn format:fix && yarn typecheck"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "solc": "^0.6.4",
    "wsrun": "^5.2.0"
  }
}
